<Window x:Class="DashBoard.View.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashBoard.View"
        xmlns:vm="clr-namespace:DashBoard.ViewModel;assembly=DashBoard.ViewModel"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        d:DataContext="{d:DesignInstance Type=vm:DialogVM, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="{Binding Title}" SizeToContent="WidthAndHeight" 
        MinWidth="450"
        MinHeight="100"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <ContentControl Content="{Binding VM}"/>
    </Grid>
</Window>
