<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Colours for Color properties-->
    <Color x:Key="WindowBackGround1">#FF121212</Color>
    <Color x:Key="WindowBackGround2">#FF202020</Color>
    <Color x:Key="WindowBackGround">#FF1F1F1F</Color>
    <Color x:Key="WindowForeGround">#FFFFFFFF</Color>
    <Color x:Key="PanelBackGround" >#FF2F2F2F</Color>
    <Color x:Key="PanelForeGround">#FFEEEEEE</Color>
    <Color x:Key="PanelHeader">Gainsboro</Color>
    <Color x:Key="PrimaryForeGround">#DD000000</Color>
    <Color x:Key="TextForeGround">#FF4146</Color>
    <Color x:Key="SecondaryAccent">#FFFC4C02</Color>
    <Color x:Key="ContentOverlay">#30FFFFFF</Color>
    <Color x:Key="ValidationErrorColor">#F4F336</Color>

    <!--Brushes for background properties-->
    <SolidColorBrush x:Key="WindowBackGround1Brush" Color="{StaticResource WindowBackGround1}"/>
    <SolidColorBrush x:Key="WindowBackGround2Brush" Color="{StaticResource WindowBackGround2}"/>
    <SolidColorBrush x:Key="WindowForeGroundBrush" Color="{StaticResource WindowForeGround}"/>
    <SolidColorBrush x:Key="PanelBackGroundBrush" Color="{StaticResource PanelBackGround}"/>
    <SolidColorBrush x:Key="PanelForeGroundBrush" Color="{StaticResource PanelForeGround}"/>
    <SolidColorBrush x:Key="PanelHeaderBrush" Color="{StaticResource PanelHeader}"/>
    <SolidColorBrush x:Key="MDBackgroundBrush" Color="AntiqueWhite"/>
    <SolidColorBrush x:Key="ContentOverlayBrush" Color="{StaticResource ContentOverlay}"/>
    <SolidColorBrush x:Key="ValidationErrorColorBrush" Color="{StaticResource ValidationErrorColor}"/>

    <LinearGradientBrush x:Key="BezelTileBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{Binding ApplicationBackgroundColour}" Offset="0"/>
        <GradientStop Color="White" Offset="0.2"/>
        <GradientStop Color="{Binding ApplicationBackgroundColour}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GridTileBackGroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{Binding ApplicationBackgroundColour}" Offset="0"/>
        <GradientStop Color="White" Offset="0.15"/>
        <GradientStop Color="{Binding ApplicationBackgroundColour}" Offset="0.5"/>
        <GradientStop Color="Black" Offset="1"/>
        <!-- Darker bottom edge for depth -->
    </LinearGradientBrush>

</ResourceDictionary>